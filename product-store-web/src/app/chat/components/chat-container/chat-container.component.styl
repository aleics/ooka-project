@require('../../../constants')

.wrapper
  height: calc(100% - 55px)
  width: 100%

  .header
    position: fixed
    width: 100%
    padding: 10px 15px
    margin-top: -5px
    background-color: $bg-color
    z-index: 5

    .refreshBtn
      background-color: $primary
      margin-top: 10px
      border: none
      &:hover
        background-color: $primary-hover

  .chatBodyContainer
    width: 100%
    height: 100%

  .adminLayout
    padding-top: 70px

  .chatInputContainer
    position: fixed
    width: 100%
    height: 100%
    padding-top: 10px
    background-color: $bg-color