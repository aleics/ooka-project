schema {
  query: Query
}

type Query {
  allProducts(filter: AllProductsFilter): [Product]
  product(filter: ProductFilter!): Product
}

input AllProductsFilter {
    q: String!
}

input ProductFilter {
  id: String
}

type Product {
  id: String!
  name: String!
  description: String!
  price: Float!
  available: Boolean!
}